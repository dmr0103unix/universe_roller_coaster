doctype html
html
	head
		meta(charset='utf-8')
		title 註冊
		link(rel='stylesheet', href='/assets/css/main.css')
	body
		div(style='padding:180px;')
			header#header
				div(style='padding:50px;')
					h1 註冊
					form(name='loginr', action='/apis/loginr', method='post')
						.field.half.first
							label(for='name') 使用者名稱
							input(type='text', name='user', placeholder='使用者名稱')
						.field.half
							label(for='passwd') 密碼
							input(type='password', name='passwd', placeholder='密碼')
							if(rlErro == 1)
							div(style='color:red')
								if(rlErroType == 1)
									p 資料不完整，去註冊吧
								if(rlErroType == 2)
									p 名稱已被使用，改一個吧
								if(rlErroType == 3)
									p 密碼錯誤，請先註冊
								if(rlErroType == 4)
									p 名稱不存在，請先註冊
						ul.actions
							li
								input(type='submit', ,='', name='submit', value='註冊')
					a(href='/') 主頁
					div
					a(href='/users/signin') 登入
	script(src='/assets/js/jquery.min.js')
	script(src='/assets/js/skel.min.js')
	script(src='/assets/js/util.js')
	script(src='/assets/js/main.js')
