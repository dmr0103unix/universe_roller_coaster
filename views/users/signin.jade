doctype html
html
	head
		meta(charset='utf-8')
		title 登入
		link(rel='stylesheet', href='/assets/css/main.css')
	body
		div(style='padding:180px;')
			header#header
				div(style='padding:50px;')
					h1 登入
					form(name='login', action='/apis/login', method='post')
						.field.half.first
							label(for='name') 使用者名稱
							input(type='text', name='user', placeholder='使用者名稱')
						.field.half
							label(for='passwd') 密碼
							input(type='password', name='passwd', placeholder='密碼')
						ul.actions
							li
								input(type='submit', ,='', name='submit', value='登入')
					a(href='/') 主頁
					div
					a(href='/users/register') 註冊
	script(src='/assets/js/jquery.min.js')
	script(src='/assets/js/skel.min.js')
	script(src='/assets/js/util.js')
	script(src='/assets/js/main.js')
